<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score Board"
        android:fontFamily="monospace"
        android:shadowColor="#EEEEEE"
        android:background="#FB8C00"
        android:textSize="36sp"
        android:paddingLeft="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team a"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp" />
            <View
                android:layout_width="75dp"
                android:layout_height="2dp"
                android:layout_marginLeft="50dp" />
            <TextView
                android:id="@+id/pointa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="0"
                android:textSize="76dp" />

            <Button
                android:id="@+id/button3a"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:background="#FF9800"
                android:text="+3 Point"
                android:onClick="point3a"
                android:layout_marginRight="24dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2a"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:background="#FF9800"
                android:text="+2 Point"
                android:layout_marginRight="24dp"
                android:onClick="point2a"
                android:textSize="20sp" />
            <Button
                android:id="@+id/button1a"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="point1a"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Free Throw"
                android:textSize="20sp"
                android:background="#FF9800" />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="350dp"
            android:background="#757575" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team b"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_marginLeft="50dp" />
            <View
                android:layout_width="75dp"
                android:layout_height="2dp"
                android:layout_marginLeft="70dp" />
            <TextView
                android:id="@+id/pointb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="0"
                android:textSize="76dp" />
            <Button
                android:id="@+id/button3b"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="+3 Point"
                android:onClick="point3b"
                android:textSize="20sp"
                android:background="#FF9800" />
            <Button
                android:id="@+id/button2b"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="+2 Point"
                android:onClick="point2b"
                android:textSize="20sp"
                android:background="#FF9800" />
            <Button
                android:id="@+id/button1b"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Free Throw"
                android:onClick="point1b"
                android:textSize="20sp"
                android:background="#FF9800" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:onClick="reset"
            android:background="#FF9800"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginBottom="32dp"/>
    </RelativeLayout>
</LinearLayout>

